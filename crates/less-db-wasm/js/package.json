{
  "name": "less-db-wasm",
  "version": "0.1.0",
  "description": "WASM-powered local-first document store with CRDT sync, schema migrations, and reactive queries",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./worker": {
      "import": "./src/opfs/init.ts",
      "types": "./src/opfs/init.ts"
    }
  },
  "license": "MIT",
  "keywords": [
    "database",
    "crdt",
    "wasm",
    "local-first",
    "reactive",
    "sync"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build --target bundler ..",
    "build:ts": "tsc --project tsconfig.json",
    "build": "npm run build:wasm && npm run build:ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:browser": "vitest run --config vitest.browser.config.ts",
    "bench": "vitest bench --config vitest.bench.config.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "dexie": "^4.0.11",
    "fake-indexeddb": "^6.2.5",
    "json-joy": "^17.67.0",
    "playwright": "^1.50.0",
    "typescript": "^5.0.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.18"
  }
}
